---
const { title, createButton } = Astro.props;
---
<div class="p-2 ps-5 flex justify-between items-center gap-x-2">
  <span
    id="hs-pro-chat-sidebar-label"
    class="block truncate font-semibold text-core-dark dark:text-neutral-200"
  >
    {title}...
  </span>

  <div class="flex items-center">
    <button
      type="button"
      class="flex justify-center items-center gap-x-3 size-8 text-sm text-core-dark/70 hover:bg-core-gray/10 rounded-full disabled:opacity-50 disabled:pointer-events-none focus:outline-hidden focus:bg-core-gray/10 dark:text-core-gray dark:hover:bg-neutral-700 dark:focus:bg-neutral-700 dark:hover:text-neutral-200 dark:focus:text-neutral-200"
      data-hs-overlay="#hs-pro-chhcp"
    >
      <svg
        class="shrink-0 size-4"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M12 3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
        <path d="M18.375 2.625a2.121 2.121 0 1 1 3 3L12 15l-4 1 1-4Z" />
      </svg>
      <span class="sr-only">Compose</span>
    </button>

    <div class="lg:hidden relative flex items-center gap-x-1 ps-2 ms-2 before:absolute before:top-1/2 before:start-0 before:w-px before:h-4 before:bg-core-gray before:-translate-y-1/2 dark:before:bg-neutral-700">
      <button
        type="button"
        class="flex justify-center items-center gap-x-3 size-8 text-sm text-core-dark hover:bg-core-gray/10 rounded-full disabled:opacity-50 disabled:pointer-events-none focus:outline-hidden focus:bg-core-gray/10 dark:text-core-gray dark:hover:bg-neutral-700 dark:focus:bg-neutral-700 dark:hover:text-neutral-200 dark:focus:text-neutral-200"
        data-hs-overlay="#hs-pro-chat-sidebar"
      >
        <svg
          class="shrink-0 size-4"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M18 6 6 18" />
          <path d="m6 6 12 12" />
        </svg>
        <span class="sr-only">Compose</span>
      </button>
    </div>
  </div>
</div>
