---
const { avatarUrl, name, status } = Astro.props;
---

<div class="inline-flex justify-center w-full">
  <div
    class="hs-dropdown relative [--strategy:absolute] [--auto-close:inside] [--placement:bottom-right] inline-flex"
  >
    <button
      id="hs-pro-chmsad"
      type="button"
      class="flex justify-center items-center gap-x-3 size-8 text-start disabled:opacity-50 disabled:pointer-events-none focus:outline-hidden"
      aria-haspopup="menu"
      aria-expanded="false"
      aria-label="Dropdown"
    >
      <img
        class="shrink-0 rounded-full"
        src="https://images.unsplash.com/photo-1659482633369-9fe69af50bfb?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=3&w=320&h=320&q=80"
        alt="Avatar"
      />
      <span
        class={`absolute -bottom-0 -end-0 block size-2 rounded-full ring-2 ring-core-light ${
          status === "online" ? "bg-core-primary" : "bg-core-gray"
        } dark:ring-neutral-800`}></span>
    </button>
    <div
      class="hs-dropdown-menu hs-dropdown-open:opacity-100 w-48 transition-[opacity,margin] duration opacity-0 hidden z-20 bg-core-light rounded-xl shadow-xl dark:bg-neutral-900"
      role="menu"
      aria-orientation="vertical"
      aria-labelledby="hs-pro-chmsad"
    >
      <div class="p-1">
        <a
          class="flex items-center gap-x-3 py-1.5 px-2.5 rounded-lg text-sm text-core-dark hover:text-core-light hover:opacity-80 disabled:opacity-50 disabled:pointer-events-none focus:outline-hidden focus:bg-core-gray/10 dark:text-neutral-300 dark:hover:opacity-80 hover:bg-neutral-950 dark:focus:bg-neutral-950"
          href="#"
        >
          <svg
            class="shrink-0 mt-0.5 size-4"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <rect width="20" height="14" x="2" y="5" rx="2"></rect>
            <line x1="2" x2="22" y1="10" y2="10"></line>
          </svg>
          Facturación
        </a>
        <a
          class="flex items-center gap-x-3 py-1.5 px-2.5 rounded-lg text-sm text-core-dark hover:text-core-light hover:opacity-80 disabled:opacity-50 disabled:pointer-events-none focus:outline-hidden focus:bg-core-gray/10 dark:text-neutral-300 dark:hover:opacity-80 hover:bg-neutral-950 dark:focus:bg-neutral-950"
          href="#"
        >
          <svg
            class="shrink-0 size-4"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"
            ></path>
            <circle cx="12" cy="12" r="3"></circle>
          </svg>
          Configuración
        </a>
        <a
          class="flex items-center gap-x-3 py-1.5 px-2.5 rounded-lg text-sm text-core-dark hover:text-core-light hover:opacity-80 disabled:opacity-50 disabled:pointer-events-none focus:outline-hidden focus:bg-core-gray/10 dark:text-neutral-300 dark:hover:opacity-80 hover:bg-neutral-950 dark:focus:bg-neutral-950"
          href="#"
        >
          <svg
            class="shrink-0 mt-0.5 size-4"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          Mi cuenta
        </a>
      </div>
      <div
        class="py-1.5 px-3.5 border-y border-core-gray/20 dark:border-neutral-800"
      >
        <div class="flex flex-wrap justify-between items-center gap-2">
          <label
            for="hs-pro-chmsaddm"
            class="flex flex-1 cursor-pointer text-sm text-core-dark dark:text-neutral-300"
          >
            Estilo Oscuro
          </label>
          <label
            for="hs-pro-chmsaddm"
            class="relative inline-block w-9 h-5 cursor-pointer"
          >
            <input
              data-hs-theme-switch
              type="checkbox"
              id="hs-pro-chmsaddm"
              class="peer sr-only"
            />

            <span
              class="absolute inset-0 bg-core-gray/20 rounded-full transition-colors duration-200 ease-in-out peer-checked:bg-core-primary dark:bg-neutral-700 dark:peer-checked:bg-core-primary peer-disabled:opacity-50 peer-disabled:pointer-events-none"
            ></span>
            <span
              class="absolute top-1/2 start-0.5 -translate-y-1/2 size-4 bg-core-light rounded-full shadow-sm !transition-transform duration-200 ease-in-out peer-checked:translate-x-full dark:bg-neutral-400 dark:peer-checked:bg-core-light"
            ></span>
          </label>
        </div>
      </div>
      <div class="p-1">
        <a
          class="flex items-center gap-x-3 py-1.5 px-2.5 rounded-lg text-sm text-core-dark hover:opacity-80 hover:text-core-light disabled:opacity-50 disabled:pointer-events-none focus:outline-hidden focus:bg-core-gray/10 dark:text-neutral-300 dark:hover:opacity-80 hover:bg-neutral-950 dark:focus:bg-neutral-950"
          href="#"
        >
          Salir {name}
        </a>
      </div>
    </div>
  </div>
</div>
