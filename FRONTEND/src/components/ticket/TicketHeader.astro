---

<div
  class="py-2.5 ps-5 pe-3 flex justify-between items-center gap-x-2 border-b border-core-gray dark:border-neutral-700"
>
  <span
    id="hs-pro-chtshid1-label"
    class="block truncate font-semibold text-core-dark dark:text-neutral-200"
  >
    Tickets
  </span>

  <div class="flex items-center gap-x-1">
    {/* Dropdown Button */}
    <div class="hs-dropdown [--placement:top-right] relative inline-flex">
      <button
        id="hs-pro-chttfd"
        type="button"
        class="flex justify-center items-center size-7 text-core-gray hover:bg-core-light rounded-lg focus:outline-hidden focus:bg-core-light disabled:opacity-50 disabled:pointer-events-none dark:text-neutral-500 dark:hover:bg-neutral-700 dark:focus:bg-neutral-700"
      >
        <svg
          class="shrink-0 size-3.5"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M3 6h18"></path>
          <path d="M7 12h10"></path>
          <path d="M10 18h4"></path>
        </svg>
        <span class="sr-only">Filter</span>
      </button>

      <!-- Update Ticket Status Dropdown -->
      <div
        class="hs-dropdown-menu hs-dropdown-open:opacity-100 w-40 transition-[opacity,margin] duration opacity-0 hidden z-11 bg-core-light rounded-xl shadow-lg dark:bg-neutral-950"
        role="menu"
        aria-orientation="vertical"
        aria-labelledby="hs-pro-chttfd"
      >
        <!-- List -->
        <div class="p-1 border-t border-core-gray dark:border-neutral-800">
          <div
            class="space-y-0.5 max-h-48 overflow-y-auto [&::-webkit-scrollbar]:w-1 [&::-webkit-scrollbar-thumb]:rounded-full [&::-webkit-scrollbar-track]:bg-core-light [&::-webkit-scrollbar-thumb]:bg-core-gray/50 dark:[&::-webkit-scrollbar-track]:bg-neutral-700 dark:[&::-webkit-scrollbar-thumb]:bg-neutral-500"
          >
            <!-- Item -->
            <label
              for="hs-pro-chttfdall"
              class="py-1.5 px-3 group flex items-center gap-x-3 rounded-lg cursor-pointer text-[13px] text-core-dark hover:bg-core-light dark:text-neutral-200 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800"
            >
              <input
                type="radio"
                class="hidden"
                id="hs-pro-chttfdall"
                name="hs-pro-chttfdin"
                checked
              />
              All
              <svg
                class="shrink-0 size-3.5 ms-auto opacity-0 group-has-checked:opacity-100"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M20 6 9 17l-5-5"></path>
              </svg>
            </label>
            <!-- End Item -->

            <!-- Item -->
            <label
              for="hs-pro-chttfdmn"
              class="py-1.5 px-3 group flex items-center gap-x-3 rounded-lg cursor-pointer text-[13px] text-core-dark hover:bg-core-light dark:text-neutral-200 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800"
            >
              <input
                type="radio"
                class="hidden"
                id="hs-pro-chttfdmn"
                name="hs-pro-chttfdin"
              />
              Mentions
              <svg
                class="shrink-0 size-3.5 ms-auto opacity-0 group-has-checked:opacity-100"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M20 6 9 17l-5-5"></path>
              </svg>
            </label>
            <!-- End Item -->

            <!-- Item -->
            <label
              for="hs-pro-chttfdcby"
              class="py-1.5 px-3 group flex items-center gap-x-3 rounded-lg cursor-pointer text-[13px] text-core-dark hover:bg-core-light dark:text-neutral-200 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800"
            >
              <input
                type="radio"
                class="hidden"
                id="hs-pro-chttfdcby"
                name="hs-pro-chttfdin"
              />
              Created by you
              <svg
                class="shrink-0 size-3.5 ms-auto opacity-0 group-has-checked:opacity-100"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M20 6 9 17l-5-5"></path>
              </svg>
            </label>
            <!-- End Item -->

            <!-- Item -->
            <label
              for="hs-pro-chttfdas"
              class="py-1.5 px-3 group flex items-center gap-x-3 rounded-lg cursor-pointer text-[13px] text-core-dark hover:bg-core-light dark:text-neutral-200 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800"
            >
              <input
                type="radio"
                class="hidden"
                id="hs-pro-chttfdas"
                name="hs-pro-chttfdin"
              />
              Assigned
              <svg
                class="shrink-0 size-3.5 ms-auto opacity-0 group-has-checked:opacity-100"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M20 6 9 17l-5-5"></path>
              </svg>
            </label>
            <!-- End Item -->

            <!-- Item -->
            <label
              for="hs-pro-chttfdua"
              class="py-1.5 px-3 group flex items-center gap-x-3 rounded-lg cursor-pointer text-[13px] text-core-dark hover:bg-core-light dark:text-neutral-200 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800"
            >
              <input
                type="radio"
                class="hidden"
                id="hs-pro-chttfdua"
                name="hs-pro-chttfdin"
              />
              Unassigned
              <svg
                class="shrink-0 size-3.5 ms-auto opacity-0 group-has-checked:opacity-100"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M20 6 9 17l-5-5"></path>
              </svg>
            </label>
            <!-- End Item -->
          </div>
        </div>
        <!-- List -->
      </div>
      <!-- End Update Ticket Status Dropdown -->
    </div>

    {/* Divider & Select */}
    <div
      class="relative ps-1.5 ms-0.5 before:block before:absolute before:top-1/2 before:start-0 before:w-px before:h-4 before:bg-core-gray/30 before:-translate-y-1/2 dark:before:bg-neutral-700"
    >
      <div class="relative inline-block">
        <select
          id="hs-pro-select-ticket-menu"
          data-hs-select=`{
                    "placeholder": "Selecciona...",
                    "toggleTag": "<button type='button' aria-expanded='false'></button>",
                    "toggleClasses": "hs-select-disabled:pointer-events-none hs-select-disabled:opacity-50 relative py-1.5 ps-2.5 pe-6 inline-flex shrink-0 justify-center items-center gap-x-1.5 text-xs text-core-gray rounded-lg hover:bg-core-light focus:outline-hidden focus:bg-core-light before:absolute before:inset-0 before:z-1 dark:text-neutral-500 dark:hover:bg-neutral-700 dark:focus:bg-neutral-700",
                    "dropdownClasses": "mt-2 z-50 end-0 w-40 p-1 space-y-0.5 bg-core-light rounded-xl shadow-xl dark:bg-neutral-900",
                    "optionClasses": "hs-selected:bg-core-light dark:hs-selected:bg-neutral-800 py-1.5 px-2 w-full text-[13px] text-core-dark rounded-lg cursor-pointer hover:bg-core-light rounded-lg focus:outline-hidden focus:bg-core-light dark:text-neutral-300 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800",
                    "optionTemplate": "<div><div class='flex items-center'><div class='me-3' data-icon></div><div class='text-core-dark dark:text-neutral-200' data-title></div></div></div>",
                    "extraMarkup": "<div class='absolute top-1/2 end-1.5 -translate-y-1/2'><svg class='shrink-0 size-3.5 text-core-gray dark:text-neutral-500' xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-Width='2' stroke-Linecap='round' stroke-Linejoin='round'><path d='m6 9 6 6 6-6'/></svg></div>"
                    }`
          class="hidden"
        >
          <option value="">Choose</option>
          <option
            value="1"
            selected
            data-hs-select-option=`{
                    "icon": "<svg class='shrink-0 size-4' xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-Width='2' stroke-Linecap='round' stroke-Linejoin='round'><path d='M7 2h10'/><path d='M5 6h14'/><rect width='18' height='12' x='3' y='10' rx='2'/></svg>"
                  }`
          >
            All
          </option>
          <option
            value="2"
            data-hs-select-option=`{
                    "icon": "<svg class='shrink-0 size-4' xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-Width='2' stroke-Linecap='round' stroke-Linejoin='round'><path d='m5 12 7-7 7 7'/><path d='M12 19V5'/></svg>"
                  }`
          >
            Newest
          </option>
          <option
            value="3"
            data-hs-select-option=`{"icon": "<svg class='shrink-0 size-4' xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-Width='2' stroke-Linecap='round' stroke-Linejoin='round'><path d='M12 5v14'/><path d='m19 12-7 7-7-7'/></svg>"}`
          >
            Oldest
          </option>
          <option
            value="5"
            data-hs-select-option=`{"icon": "<svg class='shrink-0 size-4' xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-Width='2' stroke-Linecap='round' stroke-Linejoin='round'><path d='M11.7 3H5a2 2 0 0 0-2 2v16l4-4h12a2 2 0 0 0 2-2v-2.7'/><circle cx='18' cy='6' r='3'/></svg>"}`
          >
            Unread
          </option>
          <option
            value="6"
            data-hs-select-option=`{
                    "icon": "<svg class='shrink-0 size-4' xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-Width='2' stroke-Linecap='round' stroke-Linejoin='round'><path d='M5 12h14'/><path d='m12 5 7 7-7 7'/></svg>"
                  }`
          >
            Unresolved
          </option>
          <option
            value="7"
            data-hs-select-option=`{
                    "icon": "<svg class='shrink-0 size-4' xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-Width='2' stroke-Linecap='round' stroke-Linejoin='round'><path d='M20 6 9 17l-5-5'/></svg>"
                  }`
          >
            Resolved
          </option>
        </select>
      </div>
    </div>

    {/* Close Button */}
    <button
      type="button"
      class="lg:hidden flex justify-center items-center gap-x-3 size-8 text-sm text-core-dark/60 hover:bg-core-light rounded-full focus:outline-none focus:bg-core-light dark:text-core-gray dark:hover:bg-neutral-700 dark:focus:bg-neutral-700"
      data-hs-overlay="#hs-pro-chat-sidebar"
    >
      <svg
        class="shrink-0 size-4"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-Width={2}
        stroke-Linecap="round"
        stroke-Linejoin="round"
      >
        <path d="M18 6 6 18"></path>
        <path d="m6 6 12 12"></path>
      </svg>
      <span class="sr-only">Close</span>
    </button>
  </div>
</div>
