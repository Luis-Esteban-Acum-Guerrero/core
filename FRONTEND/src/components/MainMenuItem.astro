---
import Icon from "./Icon.jsx";

const { label, icon, pending, ruta, isActive } = Astro.props;
---

{
  label === "divider" ? (
    <hr class="my-4 mx-2 border-core-light " />
  ) : (
    <li>
      <a
        href={ruta}
        class={`relative group flex flex-col justify-center items-center gap-y-1 text-[11px] disabled:opacity-50 disabled:pointer-events-none focus:outline-hidden ${
          isActive ? "text-core-light bg-core-primary p-2" : "text-core-light"
        }`}
      >
        <span
          class={`flex justify-center items-center gap-x-3 size-9 rounded-lg transition ${
            isActive
              ? "text-stone-700"
              : "text-core-light group-hover:opacity-80 group-hover:scale-110"
          }`}
        >
          <span class="hs-tooltip [--placement:right] inline-block">
            <span class="hs-tooltip-toggle">
              <Icon
                icon={icon}
                className="w-6 h-6 group-hover:scale-110 mx-auto transition duration-75 "
                client:visible
              />
            </span>
            <span
              class="hs-tooltip-content hs-tooltip-shown:opacity-100 hs-tooltip-shown:visible opacity-0 ml-3 inline-block absolute invisible z-20 py-1 px-2 bg-core-dark text-xs font-medium text-white rounded shadow-sm dark:bg-neutral-700"
              role="tooltip"
            >
              {label}
            </span>
          </span>
        </span>

        {pending > 0 && (
          <span class="flex absolute -top-1 end-2 z-10">
            <span class="relative min-w-4 min-h-4 inline-flex justify-center items-center bg-red-500 text-white text-[8px] font-bold rounded-full px-1">
              {pending}
            </span>
          </span>
        )}
      </a>
    </li>
  )
}
