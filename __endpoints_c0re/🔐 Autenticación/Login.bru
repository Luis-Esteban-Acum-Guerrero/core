meta {
  name: Login
  type: http
  seq: 2
}

post {
  url: {{base_url}}/auth/login
  body: json
  auth: inherit
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "identifier": "owis",
    "pass": "123456pass"
  }
}

script:post-response {
  if (res.getStatus() === 200) {
      const response = res.getBody();
      bru.setVar('access_token', response.accessToken);
      bru.setVar('refresh_token', response.refreshToken);
  }
}

settings {
  encodeUrl: true
}
